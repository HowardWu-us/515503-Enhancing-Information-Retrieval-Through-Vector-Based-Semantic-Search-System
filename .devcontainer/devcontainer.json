{
    "name": "Python Development",
    "image": "python:3.9",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.9",
            "installTools": true
        }
    }
}